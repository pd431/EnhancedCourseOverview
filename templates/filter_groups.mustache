{{!
    Template for year/term filter groups
}}
<div class="filter-buttons">
    {{#timeframeFilters}}
        <div class="filter-group year-term-groups mb-3">
            {{#years}}
                <div class="year-term-group">
                    <div class="year-btn">{{label}}</div>
                    <div class="term-buttons">
                        {{#terms}}
                            <button class="filter-btn term-btn {{#active}}active{{/active}}" 
                                    data-type="timeframe" 
                                    data-value="{{value}}">
                                {{label}}
                            </button>
                        {{/terms}}
                    </div>
                </div>
            {{/years}}
        </div>
    {{/timeframeFilters}}

    {{#campusFilters.isAvailable}}
        <div class="filter-group campus-group mb-3">
            <div class="filter-group-label">Campus:</div>
            <div class="filter-buttons">
                {{#campusFilters.items}}
                    <button class="filter-btn campus-btn {{#active}}active{{/active}}" 
                            data-type="campus" 
                            data-value="{{value}}">
                        {{label}}
                    </button>
                {{/campusFilters.items}}
            </div>
        </div>
    {{/campusFilters.isAvailable}}

    {{#roleFilters.isAvailable}}
        <div class="filter-group role-group mb-3">
            <div class="filter-group-label">Role:</div>
            <div class="filter-buttons">
                {{#roleFilters.items}}
                    <button class="filter-btn role-btn {{#active}}active{{/active}}" 
                            data-type="role" 
                            data-value="{{value}}">
                        {{label}}
                    </button>
                {{/roleFilters.items}}
            </div>
        </div>
    {{/roleFilters.isAvailable}}
</div>