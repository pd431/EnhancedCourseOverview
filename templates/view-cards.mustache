{{!
    @template block_enhanced_course_overview/view-cards

    This template renders the cards view for the enhanced course overview block.

    Example context (json):
    {
        "courses": [
            {
                "id": 1,
                "fullname": "Course name",
                "shortname": "Course short name",
                "viewurl": "https://www.example.com/course/view.php?id=1",
                "courseimage": "https://www.example.com/image.jpg",
                "isfavourite": true,
                "term_badges": [
                    {
                        "name": "Term 1",
                        "year": "2023-24"
                    }
                ],
                "role_badge": {
                    "name": "Student",
                    "role": "student"
                }
            }
        ],
        "displayrolebadges": true,
        "displaytermbadges": true
    }
}}

<div class="card-deck dashboard-card-deck one-row" data-region="card-deck" role="list">
    {{#courses}}
        <div class="card dashboard-card course-listitem"
             data-academic-years="{{#academic_years}}{{.}} {{/academic_years}}"
             data-terms="{{#terms}}{{.}} {{/terms}}"
             data-role="{{user_role}}"
             data-region="course-content" 
             data-course-id="{{id}}" 
             role="listitem">
            
            <a href="{{viewurl}}" tabindex="-1">
                <div class="card-img dashboard-card-img" style="background-image: url('{{{courseimage}}}');">
                    <span class="sr-only">{{fullname}}</span>
                </div>
            </a>
            
            <div class="card-body pr-1 course-info-container">
                <div class="d-flex align-items-start">
                    <div class="w-100 text-truncate">
                        <div class="d-flex mb-1">
                            <div class="d-flex mb-1 flex-wrap">
                                <h4 class="h5 mb-0 text-truncate">
                                    <a href="{{viewurl}}" class="aalink coursename mr-2">
                                        {{{fullname}}}
                                    </a>
                                </h4>
                            </div>
                        </div>
                        <div class="text-muted muted d-flex mb-1 flex-wrap">
                            <span class="sr-only">{{#str}}course{{/str}}</span>
                            <span class="pl-1">{{shortname}}</span>
                        </div>
                        
                        <!-- Term and Role Badges -->
                        <div class="d-flex flex-wrap mt-2">
                            {{#displaytermbadges}}
                                {{#term_badges}}
                                    <span class="badge badge-info m-1">{{name}}</span>
                                {{/term_badges}}
                            {{/displaytermbadges}}
                            
                            {{#displayrolebadges}}
                                <span class="badge badge-secondary m-1 role-badge-{{role_badge.role}}">{{role_badge.name}}</span>
                            {{/displayrolebadges}}
                        </div>
                    </div>
                    
                    <div class="ml-auto dropdown">
                        <button class="btn btn-link btn-icon icon-size-3" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="icon fa fa-ellipsis-v fa-fw" aria-hidden="true"></i>
                            <span class="sr-only">{{#str}}actionsmenu{{/str}}</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="{{viewurl}}" aria-label="{{#str}}viewcoursename, block_myoverview, {{fullname}}{{/str}}">
                                {{#str}}viewcourse, block_myoverview{{/str}}
                            </a>
                            {{#isfavourite}}
                                <a class="dropdown-item" href="#" data-action="remove-from-favourites" data-course-id="{{id}}" aria-label="{{#str}}removefromfavourites, block_myoverview, {{fullname}}{{/str}}">
                                    {{#str}}removefromfavourites, block_myoverview{{/str}}
                                </a>
                            {{/isfavourite}}
                            {{^isfavourite}}
                                <a class="dropdown-item" href="#" data-action="add-to-favourites" data-course-id="{{id}}" aria-label="{{#str}}addtofavourites, block_myoverview, {{fullname}}{{/str}}">
                                    {{#str}}addtofavourites, block_myoverview{{/str}}
                                </a>
                            {{/isfavourite}}
                            {{#canhide}}
                                {{#ishidden}}
                                    <a class="dropdown-item" href="#" data-action="show-course" data-course-id="{{id}}" aria-label="{{#str}}showcourse, block_myoverview, {{fullname}}{{/str}}">
                                        {{#str}}show, block_myoverview{{/str}}
                                    </a>
                                {{/ishidden}}
                                {{^ishidden}}
                                    <a class="dropdown-item" href="#" data-action="hide-course" data-course-id="{{id}}" aria-label="{{#str}}hidecourse, block_myoverview, {{fullname}}{{/str}}">
                                        {{#str}}hide, block_myoverview{{/str}}
                                    </a>
                                {{/ishidden}}
                            {{/canhide}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/courses}}
</div>