<div class="enhanced-filters mb-3">
    {{#filtergroups}}
    <div class="btn-group mb-1">
        <button type="button" class="btn btn-outline-secondary filter-group-header" disabled>{{name}}</button>
        {{#filters}}
        <button type="button" class="btn btn-outline-secondary filter-term-btn" data-group="{{name}}" data-pattern="{{pattern}}">{{title}}</button>
        {{/filters}}
    </div>
    {{/filtergroups}}
    
    {{^filtergroups}}
    <div class="alert alert-warning">
        <strong>No filter groups were defined or they were not parsed correctly.</strong>
        <p>Please check the plugin settings and make sure the filter definitions are properly formatted.</p>
    </div>
    {{/filtergroups}}
</div>